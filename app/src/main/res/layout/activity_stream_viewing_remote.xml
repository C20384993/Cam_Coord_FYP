<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".MainActivity">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/btn_switch"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_marginTop="62dp"
        android:text="View remotely"
        android:textSize="18dp"
        android:backgroundTint="@color/blue"/>

    <Button
        android:id="@+id/btn_record"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:backgroundTint="@color/blue"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="112dp"
        android:text="Start Recording" />

    <Button
        android:id="@+id/btn_record_length"
        android:layout_width="221dp"
        android:layout_height="47dp"
        android:layout_above="@id/time_slider"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="92dp"
        android:text="Record for (s): 10"
        android:backgroundTint="@color/blue"
        android:textSize="18dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/time_slider"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_above="@id/btn_record"
        android:layout_marginBottom="26dp"
        android:stepSize="10"
        android:value="10"
        android:valueFrom="10"
        android:valueTo="120"
        app:thumbColor="@color/blue"
        app:tickColor="#13161d"
        app:thumbStrokeColor="@color/blue"
        app:trackColorActive="#599cff"
        app:haloColor="@color/blue"/>

</RelativeLayout>