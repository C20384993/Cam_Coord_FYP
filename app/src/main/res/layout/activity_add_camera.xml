<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCameraActivity">

    <EditText
        android:id="@+id/editText_AddCamName"
        android:layout_width="286dp"
        android:layout_height="73dp"
        android:ems="10"
        android:hint="Custom name for camera"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <EditText
        android:id="@+id/editText_AddCamUsername"
        android:layout_width="286dp"
        android:layout_height="73dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Camera pre-configured username"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_AddCamName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_AddCamPassword"
        android:layout_width="286dp"
        android:layout_height="73dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Camera pre-configured password"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_AddCamUsername"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_CreateCamClass"
        android:layout_width="153dp"
        android:layout_height="64dp"
        android:text="Add Camera Entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

</androidx.constraintlayout.widget.ConstraintLayout>